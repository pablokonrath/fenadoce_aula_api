generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candidata {
  id       Int    @id @default(autoincrement())
  nome     String @db.VarChar(60)
  clube    String @db.VarChar(40)
  idade    Int    @db.SmallInt
  sonho    String @db.VarChar(255)
  numVotos Int    @default(0)
  votos    Voto[]

  @@map("candidatas")
}

model Cliente {
  id       Int      @id @default(autoincrement())
  nome     String   @db.VarChar(60)
  email    String   @db.VarChar(60)
  cidade   String   @db.VarChar(20)
  dataNasc DateTime
  votos    Voto[]

  @@map("clientes")
}

model Voto {
  id            Int       @id @default(autoincrement())
  data          DateTime  @default(now())
  justificativa String?   @db.VarChar(200)
  candidata     Candidata @relation(fields: [candidataId], references: [id])
  candidataId   Int
  cliente       Cliente   @relation(fields: [clienteId], references: [id])
  clienteId     Int

  @@map("votos")
}
